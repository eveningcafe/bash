listen masakari_api
  bind {{ vip.haproxy.ip }}:15868
  timeout client 2m
  timeout server 2m
  balance  source
  http-request del-header X-Forwarded-Proto
  http-request set-header X-Forwarded-Proto https if { ssl_fc }
  option  httpchk
  option  httplog
  option  httpclose
{% for key, value in controllers.items() %}
  server {{ value }} {{ key }}:15868 check inter 2000 fastinter 2s downinter 3s rise 2 fall 5
{% endfor %}
